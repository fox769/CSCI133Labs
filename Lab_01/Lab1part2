#include <iostream>
#include <ctime>
using namespace std;

int main() {
	time_t t;
	struct tm *now;
	t = time(0);             // get current time                                           
	now = localtime(&t);     // adjust for local timezone
	int hour = now->tm_hour; // retrieve current hour
	int min = now->tm_min;   // retrieve current min
	//compare it to time now
	//Task 2
	int home_min;
	int HH;
	int MM;
	cout << "How many minutes from now do you expect to be home from now?";
	cin >> home_min;
	HH = hour;
	MM = min + home_min;
	MM%=60
		//make minutes only from 0 to 60(24)
		cout << "You will get home at " << HH << ":" << MM << endl;v
}
cout << "Enter the hours part of today's sunset time (4-9):" << hour << min << endl;
cin  >> hour;        